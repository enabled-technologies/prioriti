<!-- Validation failure messages -->
<% if @collaborator.errors.any? %>
  <% @collaborator.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Collaborator</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_collaborator" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for list_id -->
      <div class="form-group">
        <label for="list_id" class="control-label">
          List
        </label>

        <%= select_tag(:list_id, options_from_collection_for_select(List.all, :id, :listname, @collaborator.list_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Collaborator
      </button>
      or
      <a href="/collaborators">Cancel</a>
    </form>
  </div>
</div>
