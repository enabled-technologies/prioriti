<div class="page-header">
  <h3>Collaborator #<%= @collaborator.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>List</dt>
      <dd>
        <% if @collaborator.list.present? %>
          <a href="/lists/<%= @collaborator.list_id %>">
            <%= @collaborator.list.listname %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/collaborators" class="btn btn-primary">
        Back
      </a>
      <a href="/collaborators/<%= @collaborator.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_collaborator/<%= @collaborator.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Collaborator has many leader -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Leader
      </li>

      <% @collaborator.leader.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.email %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
