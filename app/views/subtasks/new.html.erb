<!-- Validation failure messages -->
<% if @subtask.errors.any? %>
  <% @subtask.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Subtask</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_subtask" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for subtaskname -->
      <div class="form-group">
        <label for="subtaskname" class="control-label">
          Subtaskname
        </label>

        <input type="text" id="subtaskname" name="subtaskname" placeholder="Subtaskname" class="form-control" value="<%= @subtask.subtaskname %>">
      </div>

      <!-- Label and input for subtaskprioriti -->
      <div class="form-group">
        <label for="subtaskprioriti" class="control-label">
          Subtaskprioriti
        </label>

        <input type="text" id="subtaskprioriti" name="subtaskprioriti" placeholder="Subtaskprioriti" class="form-control" value="<%= @subtask.subtaskprioriti %>">
      </div>

      <!-- Label and input for subtaskduedate -->
      <div class="form-group">
        <label for="subtaskduedate" class="control-label">
          Subtaskduedate
        </label>

        <input type="text" id="subtaskduedate" name="subtaskduedate" placeholder="Subtaskduedate" class="form-control" value="<%= @subtask.subtaskduedate %>">
      </div>

      <!-- Label and input for subtaskstatus -->
      <div class="form-group">
        <label for="subtaskstatus" class="control-label">
          Subtaskstatus
        </label>

        <input type="text" id="subtaskstatus" name="subtaskstatus" placeholder="Subtaskstatus" class="form-control" value="<%= @subtask.subtaskstatus %>">
      </div>

      <!-- Label and input for task_id -->
      <div class="form-group">
        <label for="task_id" class="control-label">
          Task
        </label>

        <%= select_tag(:task_id, options_from_collection_for_select(Task.all, :id, :taskname, @subtask.task_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Subtask
      </button>
      or
      <a href="/subtasks">Cancel</a>
    </form>
  </div>
</div>
